<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_color">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/relCenter"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/splashLogo"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvSlang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/progress"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/sh_regular"
        android:gravity="center"
        android:lineSpacingExtra="12dp"
        android:text="حدس کلمه"
        android:textColor="#D50000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="SpUsage" />

    <RelativeLayout
        android:id="@+id/relCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="-48dp" />


    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="100dp"
        android:visibility="visible" />


</RelativeLayout>